<div class="col d-xl-table-cell d-lg-table-cell d-md-table-cell d-none">
    <% if notes.blank? %>
      <p class="text-danger">No results found.</p>
    <% else %>
      <p class="font-weight-bold">
        <%= page_entries_info notes %>
        <%= paginate notes %>
      </p>
    <% end %>
</div>
<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th  style="position: sticky; position: -webkit-sticky;top: 0;" class="col-3">Block</th>
      <th class="col-3">
        <div class="form-row">
          <div class="col-7">
          Load
          </div>
          <div class="col-5">
          Part
          </div>
        </div>
      </th>
      <th class="col-6">Checks</th>
    </tr>
  </thead>
  <tbody>
    <% @bbl.each do |b| %>
    <% results = calculate_mean(b.checks) %>
    <tr>
      <td>
        <div class="form-row">
          <div class="col-4">
            <strong><%= b.so_num %></strong>
            <% if !b.is_rework %>
              <div class="text-danger d-inline">
                RW
              </div>
            <% end %>
            <br>
            <div class="text-muted">
              Load: <%= b.load_num %><br>
              Block: <%= b.block_num %><br>
            </div>
            <%= b.checks.first.check_timestamp.strftime("%m/%d/%y") %>
          </div>
          <div class="col-8">
            <%= b.user.full_name unless b.user.blank? %><br>
            Directory: <%= b.directory %><br>
            Product: <%= b.product %><br>
            Application: <%= b.application %>
          </div>
        </div>
      </td>
      <td>
        <div class="form-row">
          <% if b.customer.blank? %>
            <div class="col-12 text-center">
              Customer info (from API) unavailable.
            </div>
          <% else %>

            <div class="col-7">
              Load Weight: <%= b.load_weight %><br>
              Piece Weight: <%= b.piece_weight %><br>
              Part Area: <%= b.part_area %>
              
            </div>
            <div class="col-5">
              <strong class="text-center"><%= b.customer %></strong> -
              <div class="text-muted d-inline">
                <%= b.process %><br>
              </div>
              <%= b.part %> <%= b.sub %><br>
              Density: <%=((b.piece_weight.to_f/32.2)/(b.part_area.to_f*b.checks.first.thickness)).round(2)%>
            </div>
          </div>
        <% end %>
      </td>
      <td>
        <table class="table mb-0">
          <thead class="thead-dark">
            <tr class="mb-0 mt-0">
              <th class="col-4 text-right"><button class="btn-sm btn-dark text-warning py-0" type="button" data-toggle="collapse" data-target=".<%= b.id %>checks"><%= fa_icon("list-ul")%></button>
              Check Count: <%= b.checks.length %>
              </th>
              <th class="col-2 text-right">Mean</th>
              <th class="col-2 text-right">Min</th>
              <th class="col-2 text-right">Max</th>
              <th class="col-2 text-right">Std. Dev</th>
            </tr>
          </thead>
          <tbody>
            <tr clas="mb-0 mt-0">
              <td class="text-right">Thickness:</td>
              <td class="text-right"><%= results[0] %></td>
              <td class="text-right"><%= results[1] %></td>
              <td class="text-right"><%= results[2] %></td>
              <td class="text-right"><%= results[3] %></td>
            </tr>
            <tr>
              <td class="text-right">Alloy %:</td>
              <td class="text-right"><%= results[4] %></td>
              <td class="text-right"><%= results[5] %></td>
              <td class="text-right"><%= results[6] %></td>
              <td class="text-right"><%= results[7] %></td>
            </tr>
          </tbody>
        </table>
        <div class="px-0 container-fluid collapse <%= b.id %>checks">
          <table class="table table-sm">
            <thead class="thead-dark">
              <tr>
                <th></th>
                <th class="text-left">Date</th>
                <th class="text-right">Thickness</th>
                <th class="text-right">Alloy %</th>
                <th colspan="2" class="text-center">Coordinates</th>
              </tr>
            </thead>
            <tbody>
              <% b.checks.each do |c| %>
              <tr>
                <td class="text-center"><%= c.check_num %></td>
                <td class="text-left">
                <%= c.check_timestamp.strftime("%D") %></td>
                <td class="text-right"><%= number_with_precision(c.thickness, precision: 5) %></td>
                <td class="text-right"><%= number_with_precision(c.alloy_percentage, precision: 4) %></td>
                <td>
                  <div class="row">
                    <div class="col-4 text-right">
                      X: <%= number_with_precision(c.x, precision: 3) %>
                    </div>
                    <div class="col-4 text-right">
                      Y: <%= number_with_precision(c.y, precision: 3) %>
                    </div>
                    <div class="col-4 text-right">
                      Z: <%= number_with_precision(c.z, precision: 3) %>
                    </div>
                  </div>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>