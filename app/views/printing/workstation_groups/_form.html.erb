<div class='container-fluid border mt-3 px-3 py-3'>
  <%= form_for @workstation_group do |f| %>
    <div class='form-group'>
      <%= f.label :Name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= f.label :workstations %>
      <%# f.collection_check_boxes:workstation_ids, Printing::Workstation.all, :id, :name, {class: 'form-control'} %>
      <%= collection_select :workstation_group, :workstations, Printing::Workstation.all, :id, :name, { :selected => @workstation_group.workstation_ids }, { :multiple => true, :name => 'printing_workstation_group[workstation_ids][]', class: 'form-control' } %>
    </div>

    <%= f.submit 'Save', class: 'btn btn-primary' %>
  <% end %>
</div>