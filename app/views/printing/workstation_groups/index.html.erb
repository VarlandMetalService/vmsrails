<table class='table mt-3'>
  <thead class='thead-dark'>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Workstations</th>
      <th>
        <%= link_to fa_icon('plus', text: 'New Group'), new_printing_workstation_group_path, class: 'btn btn-warning pull-right' %>
      </th>
      <th>Links</th>
    </tr>
  </thead>
  <tbody>
    <% @workstation_groups.each do |group| %>
    <tr>
      <td><%= group.name %></td>
      <td><%= group.description %></td>
      <td>
        <% group.workstations.each do |workstation| %>
            <%= workstation.name %><br>
        <% end %>
      </td>
      <td>
        <div class='btn-group pull-right' role='group'>
          <%= link_to fa_icon('pencil'),
            edit_printing_workstation_group_path(group),
            class: 'font-weight-bold btn btn-sm btn-warning',
            title: 'Edit Workstation Group',
            data: { toggle: 'tooltip' } %>


          <%= link_to fa_icon('times'),
            printing_workstation_group_path(group),
            method: :delete,
            class: 'font-weight-bold btn btn-sm btn-danger',
            title: 'Delete Group',
            data: { confirm: 'Are you sure you want to delete this Workstation Group?',                            toggle: 'tooltip' } %>
        </div>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>