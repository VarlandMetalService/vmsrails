<div class="row mt-3">
  <div class="col">   
    <%= form_with url: printing_print_jobs_path,
                  class: 'bg-dark text-white border rounded p-3 mb-3',
                  method: 'get' do |f| %>
    <p class="small font-weight-bold text-warning mb-2 text-uppercase">Filter Results</p>
    <div class="row">
      <div class="col-4">
        <div class="form-group">
          <%= f.label :with_user,
                      'User:' %> 
          <%= f.select :with_user,
                options_for_select(User.all.map { |u| [u.full_name, u.id] }, params[:with_user]),
                { include_blank: true },
                { class: 'custom-select', onchange: 'this.form.submit();' }%>
        </div>
      </div>

      <div class="col-4">
        <div class="form-group">
          <%= f.label :with_workstation,
                      'Workstation:' %>
          <%= f.select :with_workstation,
                options_for_select(Workstation.all.map { |u| [u.name, u.id] }, params[:with_workstation]),
                { include_blank: true },
                { class: 'custom-select', onchange: 'this.form.submit();' }%>           
        </div>
      </div>

      <div class="col-4">
        <div class="form-group">
          <%= f.label :with_doc_type,
                      'Document Type:' %>
          <%= f.select :with_doc_type,
                options_for_select(DocumentType.all.map { |u| [u.name, u.id] }, params[:with_doc_type]),
                { include_blank: true },
                { class: 'custom-select', onchange: 'this.form.submit();' }%>           
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <div class="pull-left">       
        </div>
      </div>
      <div class="col">
        <div class="pull-right">
          <%= link_to 'Reset', printing_print_jobs_url, class: 'btn btn-link text-white' %>
          <%= f.button fa_icon('filter', text: 'Filter'),
                        class: 'btn btn-sm btn-warning font-weight-bold',
                        type: 'submit' %>
        </div>
        <div class="clearfix"><!----></div>
      </div>
    </div>
    <% end %>
  </div>
</div>
