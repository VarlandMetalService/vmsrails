<% provide(:title, 'Permission Management') %>
<div class="row mt-3">
  <div class="col">
    <h4 class="mb-0">Permission Management</h4>
  </div>
</div>
<div class="row mt-3">
  <div class="col">
    <table class="table table-striped table-bordered">
      <thead class="thead-dark">
        <tr>
          <th>ID</th>
          <th>Description</th>
          <th class="text-center">User Count</th>
          <th class="text-center">Options</th>
        </tr>
      </thead>
      <tbody>
        <% @permissions.each do |p| %>
          <tr>
            <td><code><%= p.permission %></code></td>
            <td><%= p.description %></td>
            <td class="text-center"><%= p.users.size %></td>
            <td class="text-center"><%= link_to fa_icon('pencil', text: 'Edit'), edit_admin_permission_path(p), class: 'font-weight-bold btn btn-sm btn-primary' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>