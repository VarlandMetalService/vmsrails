<% js = escape_javascript(
  render(
    :partial => 'specifications/list',
    :locals => { :specifications => @specifications,
                 :term => params[:with_search_term] }
  )
) %>
$('#specifications').html("<%= js %>");
<% js2 = escape_javascript(
  render(
    :partial => 'specifications/filter_form',
    :locals => { :specifications => @unpaged_specifications }
  )
) %>
$('#filter_form').html("<%= js2 %>");