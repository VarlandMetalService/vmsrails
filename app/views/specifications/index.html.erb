<% provide(:title, "#{'Archived ' if params[:action] == 'archived'} Specifications") %>
<div class="row mt-3">
  <div class="col">
    <h3 class="mb-0"><%= 'Archived ' if params[:action] == 'archived' %>Specifications</h3>
    <p>
      <% if params[:action] == 'archived' %>
        <%= link_to 'Current specifications',
                    specifications_path %>
      <% else %>
        <%= link_to 'Archived specifications',
                    archived_specifications_path %>
      <% end %>
    </p>
  </div>
</div>
<div class="row mt-3">
  <div class="col" id="filter_form">
    <%= render partial: 'filter_form', locals: { specifications: @specifications } %>
  </div>
</div>
<div class="row mt-3" id="specifications">
  <%= render partial: 'list', locals: { specifications: @specifications,
                                        term: params[:with_search_term] } %>
</div>