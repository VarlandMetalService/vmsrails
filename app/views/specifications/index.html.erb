<% provide(:title, "#{params[:action].titleize unless params[:action] == 'index'} Specifications") %>
<div class="row mt-3">
  <div class="col">
    <h3 class="mb-0"><%= "#{params[:action].titleize} " unless params[:action] == 'index' %>Specifications</h3>
    <p>
      Go to:
      <% case params[:action] %>
      <% when 'archived' %>
        <%= link_to 'Current Specifications',
                    specifications_path %>
        &bull;
        <%= link_to 'Deleted Specifications',
                    deleted_specifications_path %>
      <% when 'deleted' %>
        <%= link_to 'Current Specifications',
                    specifications_path %>
        &bull;
        <%= link_to 'Archived specifications',
                    archived_specifications_path %>
      <% else %>
        <%= link_to 'Archived specifications',
                    archived_specifications_path %>
        &bull;
        <%= link_to 'Deleted Specifications',
                    deleted_specifications_path %>
      <% end %>
    </p>
  </div>
</div>
<div class="row mt-3">
  <div class="col" id="filter_form">
    <%= render partial: 'filter_form', locals: { specifications: @unpaged_specifications } %>
  </div>
</div>
<div class="row mt-3" id="specifications">
  <%= render partial: 'list', locals: { specifications: @specifications,
                                        term: params[:with_search_term] } %>
</div>