<%= content_tag :h4, style: "font-weight: 500; line-height: 1.2; margin: 1rem 0 0; font-size: 1.5rem;" do -%>
  Dichromate Tank Temperature Low
<% end -%>
<%= content_tag :ul, style: "list-style: none; margin: 1rem 0 0; padding: 0; background-color: #eeeeee; border: 1px solid #dddddd; padding: 0.5rem;" do -%>
  <%= content_tag :li, style: "margin: 0; line-height: 1.2; padding: 0;" do -%>
    <%= opto_email_field_value 'Low Limit', "#{number_with_delimiter(@log.limit)}&deg; F" %>
  <% end -%>
  <%= content_tag :li, style: "margin: 0.25rem 0 0; line-height: 1.2; padding: 0;" do -%>
    <%= opto_email_field_value 'Tank Temperature', "#{number_with_delimiter(@log.reading)}&deg; F" %>
  <% end -%>
  <%= content_tag :li, style: "margin: 0.25rem 0 0; line-height: 1.2; padding: 0;" do -%>
    <%= opto_email_field_value 'Timestamp', @log.controller_timestamp.strftime('%m/%d/%Y %H:%M:%S') %>
  <% end -%>
<% end -%>
<%= content_tag :p, style: "margin: 1rem 0 0; line-height: 1.2; font-size: 0.85rem; color: #6c757d; font-style: italic;" do -%>
  Controller: <%= @log.controller.name %> (<%= @log.controller.ip_address %>)
<% end -%>