<%= form_with model: [commentable, Comment.new] do |f| %>
<% users_array = User.all.map{ |user| [user.full_name, user.id] } %>
    
    <div class="form-row">
        <div class="form-group col-md-2">
            <%= f.label :User , class:"col-form-label"%>
            <%= f.select :user_id, options_for_select(users_array,      current_user.id), {}, class: "form-control" %>
        </div>
        <div class="form-group col">  
            <%= f.label :Attachment , class:"col-form-label" %>       
            <%= f.file_field :attachment, class: "form-control-file" %>
        </div>
    </div>        
    <div class="form-row">
    <%= f.trix_editor :body, class: "form-control", placeholder: "Add a comment..." %>
    </div>
        
    <%= f.submit class: "btn btn-primary"%>
<% end %>

