
  <% if commentable.comments.blank? %>
    <div class="py-4">
    No comments to display...maybe you should leave one!
    </div>
      
  <% else %>
    <table class="table" style="width: 100%; max-width: 550px; margin: 0 auto;" >
      <thead>
        <tr>
          <th class="col-1"> Comments:</th>
          <th class="col-10"></th>
          <th class="col-1"></th>
        </tr>
      </thead>
      <tbody>
        <% commentable.comments.each do |c| %>
        <tr>
          <td class="text-center">
            <% if c.user.blank? %>
                &nbsp;
              <% else %>
                <span class="badge badge-pill" 
                  style="color: <%= c.user.avatar_text_color %>; 
                  background-color: <%= c.user.avatar_bg_color %>;">
                  <%= c.user.initials %> </span>
            <% end %>
            <%= c.created_at.strftime('%D') %>
            <% if params[:action] == "edit" %>
              <%= link_to fa_icon('times'),
                    shift_note_comment_path(commentable, c),
                    method: :delete,
                    class: 'font-weight-bold btn btn-sm btn-danger',
                    title: 'Delete comment',
                    data: { confirm: 'Are you sure you want to delete this comment?',                            toggle: 'tooltip' } %>
            <% end %>
          </td>
          <td><%= sanitize c.body unless c.body.blank? %></td>
          <% if c.attachment? %>
          <td>
            <button class="btn btn-block float-right" style="background-color: #DDDDDD; border-color: #dee2e6;" type="button" data-toggle="collapse" data-target=".multi-collapse<%=c.id%>" style="font-size: 11px;">
                <%= fa_icon('paperclip')%>
            </button>
          </td>
          <% else %>
          <td></td>
          <% end %>
        </tr>
        <% if c.attachment? %>
          <% c.attachment.each do |f| %>
            <tr class="collapse multi-collapse<%=c.id%> bg-white">
              <td colspan="3" class="text-center px-0">
                <a href="<%= f.url %>" target="_blank"><%= image_tag(f.url, size: '320') if !f.blank? %></a>
              </td>
            </tr>
          <% end %>
        <% end %>
        <% end %>
      </tbody>
    </table>
  <% end %>

