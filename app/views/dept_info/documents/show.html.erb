<% provide(:title, "#{@document.name} - Departmental Information") %>
<div class="row mt-3">
  <div class="col">
    <p><%= link_to '&larr; Back to Departmental Information Home'.html_safe, :back %></p>
    <h3>
      <span class="text-muted"><%= @document.folder_path.html_safe %> &rarr;</span>
      <%= document_icon @document %> <%= @document.name %>
    </h3>
    <p><%= link_to 'View/Download Original in New Tab',
                   @document.url,
                   target: '_blank',
                   class: 'btn btn-sm btn-light' %></p>
  </div>
</div>
<div class="row">
  <div class="col">
    <%=
      case @document.content_type
      when 'application/vnd.google-apps.document', 'application/vnd.google-apps.spreadsheet'
        render partial: "google", object: @document
      else
        'You must click the link above to view this item in a new tab.'
      end
    %>
  </div>
</div>