<% provide(:title, 'Departmental Information') %>
<div class="row mt-3">
  <div class="col">
    <h3 class="mb-0">Departmental Information</h3>
  </div>
</div>
<div class="row mt-3">
  <%= render partial: 'filter_form' %>
  <div class="col-12 col-lg-6 mb-3">
    <div class="card border bg-light rounded p-3">
      <p class="small font-weight-bold mb-1 text-uppercase">Newest Documents</p>
      <%= render partial: "document", collection: @newest, locals: { depth: 0, include_path: true, dark: false } %>
    </div>
  </div>
</div>
<div class="row mt-3 mb-3">
  <div class="col">
    <%= render partial: "folder", collection: @folders %>
  </div>
</div>
<div class="row mb-3 d-none">
  <div class="col">
    <p><%= link_to 'Manual Update', dept_info_update_url, class: 'btn btn-sm btn-danger' %></p>
  </div>
</div>