<nav>
  <div class='nav nav-tabs' id='nav-tab<%= note.id %>' 
                          role='tablist'>
    <a class='nav-item nav-link active' id='<%= note.id %>nav-home-tab' 
                               data-toggle='tab' 
                                      href='#<%= note.id %>nav-home' 
                                      role='tab'>
      Comment List
    </a>
    <a class='nav-item nav-link' id='nav-profile-tab' 
                        data-toggle='tab' 
                                href='#<%= note.id %>nav-profile' 
                                role='tab'>
      Leave a Comment
    </a>
  </div>
</nav>
<div class='tab-content' id='nav-tabContent'>
  <div class='tab-pane fade show active' id='<%= note.id %>nav-home' 
                                        role='tabpanel' 
                            aria-labelledby='nav-home-tab'>
    <%= render partial: 'comments/comment_list', locals: {commentable: note} %>
  </div>
  <div class='tab-pane fade' id='<%= note.id %>nav-profile'
                            role='tabpanel' 
                aria-labelledby='nav-profile-tab'>
    <%= render partial: 'comments/comment_form', locals: {commentable: note, combo: false} %>
  </div>
</div>