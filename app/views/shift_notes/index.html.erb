<% provide(:title, 'Shift Notes') %>
<div class="row mt-3">
  <div class="col">
    <h3 class="mb-0">Shift Notes</h3>
  </div>
</div>
<div class="row mt-3">
  <div class="col-12" id="filter_form">
    <%= render partial: 'filter_form', locals: { notes: @shift_notes } %>
  </div>
</div>

<div class="row" id="shift_notes">
  <div class="col">
    <%= render partial: 'list', locals: { notes: @shift_notes,
                                      term: params[:with_search_term] } %>
    </div>
</div>