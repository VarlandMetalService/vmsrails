<p id="notice"><%= notice %></p>

<p>
  <strong>Date:</strong>
  <%= @shift_note.created_at %>
</p>

<p>
  <strong>User:</strong>
  <%= @shift_note.user.full_name %>
</p>

<p>
  <strong>Dept:</strong>
  <%= @shift_note.dept %>

  <strong>Shift type:</strong>
  <%= @shift_note.shift_type %>

  <strong>Shift time:</strong>
  <%= @shift_note.shift_time %>
  <br><%= link_to 'Back', shift_notes_path, class: "btn btn-primary" %>
  <%= link_to 'Edit', edit_shift_note_path, class: "btn btn-primary" %><br>
</p>

<p>
  <strong>Message:</strong>
  <%= @shift_note.message %>
</p>

<% if @shift_note.response? %>
<p>
  <strong>Response:</strong>
  <%= @shift_note.response %>
  <br>
  <strong>Responder:</strong>
  <%= @shift_note.supervisor.full_name %>
</p>
<% end %>

<p>
  <strong>Updated:</strong>
  <%= @shift_note.updated_at %>
</p>



