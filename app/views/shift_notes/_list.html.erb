<div class="col">
  <% if notes.blank? %>
    <p class = "text-danger">No results found.</p>
  <%else%> 
    <p class="font-weight-bold"> 
    <% page_entries_info notes %>
    </p>
     
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>Last Updated</th>
          <th>Shift Type</th>
          <th>Shift Time</th>
          <th>Dept</th>
          <th>Comments</th>
          <th>Links</th>
        </tr>
      </thead>

      <tbody>
        <% notes.each do |n| %>
          <tr>
            <td> <%= n.updated_at %>  </td>
            
            <td> <a href="#" data-shift_type="<%= n.shift_type %>" title="Filter by shift type
            <%= n.shift_type %>" class="shift_type-filter font-weight-bold"> <%= n.shift_type %></a> </td>

            <td> <a href='#' data-shift_time="<%= n.shift_time %>" title="Filter by shift time 
            <%= n.shift_time %>" class="shift_time-filter font-weight-bold"> <%= n.shift_time %></a> </td>
            
            <td> <a href="#" data-dept="<%= n.dept %>" title="Filter by department <%= n.dept %>" 
              class="dept-filter font-weight-bold"><%= n.dept %></a> </td>

            <td>
            <%= render partial: "comments/comment_list", locals: {commentable: n} %>
            </td> 

            <td> <%= link_to 'Show', shift_note_path(n.id), class: "btn btn-primary"%>      
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>