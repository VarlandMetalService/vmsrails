<div class="col d-xl-table-cell d-lg-table-cell d-md-table-cell d-none">
  <% if notes.blank? %>
    <p class="text-danger">No results found.</p>
  <% else %>
    <p class="font-weight-bold">
      <%= page_entries_info notes %>
      <%= paginate notes %>
    </p>
  <% end %>
</div>
<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th class="col-1"></th>
      <th class="col-1">Info</th>
      <th class="col-auto">Note</th>
      <th class="col-3">Comments</th>
      <th class="col-1 text-center">Links</th>
    </tr>
  </thead>
  <tbody>
    <% notes.each do |n| %>
    <tr>
      <td class="text-center">
        <% if n.user.blank? %>
          &nbsp;
        <% else %>
          <span class="badge badge-pill" 
            style="color: <%= n.user.avatar_text_color %>; 
            background-color: <%= n.user.avatar_bg_color %>;">
            <%= n.user.initials %> </span>
        <% end %><br>
        <%= n.created_at.strftime('%D') unless n.updated_at.blank? %><br>
        <%= n.created_at.strftime("%I:%M %p")%>
      </td>
      <td>
        Shift Time:
        <a href='#' data-shift_time="<%= n.shift_time unless n.shift_time.blank? %>" title="Filter by shift time 
        <%= n.shift_time unless n.shift_time.blank? %>" class="shift_time-filter font-weight-bold"> <%= n.shift_time unless n.shift_time.blank? %></a>
        <br>
        Shift Type:
        <a href="#" data-shift_type="<%= n.shift_type unless n.shift_type.blank? %>" title="Filter by shift type
        <%= n.shift_type unless n.shift_type.blank? %>" class="shift_type-filter font-weight-bold"> <%= n.shift_type unless n.shift_type.blank? %></a> 
        <br>
        Dept:
        <a href="#" data-dept="<%= n.dept unless n.dept.blank? %>" title="Filter by department <%= n.dept unless n.dept.blank? %>" 
        class="dept-filter font-weight-bold"><%= n.dept unless n.dept.blank? %></a>
      </td>
      <td><%=sanitize n.message unless n.message.blank? %></td>
      <td class="px-0 py-1">
        <nav>
          <div class="nav nav-tabs" id="nav-tab<%=n.id%>" role="tablist">
            <a class="nav-item nav-link active" id="<%=n.id%>nav-home-tab" data-toggle="tab" href="#<%=n.id%>nav-home" role="tab" aria-controls="<%=n.id%>nav-home" aria-selected="true">Comment List</a>
            <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#<%=n.id%>nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">Leave a Comment</a>
          </div>
        </nav>
        <div class="tab-content" id="nav-tabContent">
          <div class="tab-pane fade show active" id="<%=n.id%>nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
            <%= render partial: "comments/comment_list", locals: {commentable: n} %>
          </div>
          <div class="tab-pane fade" id="<%=n.id%>nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
            <%= render partial: "comments/comment_form", locals: {commentable: n, combo: false} %>
          </div>
        </div>
      </td>
      <td class="text-center">
        <div class="btn-group-vertical" role="group">
          <%= link_to fa_icon('eye'),
                shift_note_path(n),
                class: 'font-weight-bold btn btn-sm btn-success',
                title: 'View Shift Note',
                data: { toggle: 'tooltip' } %>
          <% if @access_level >= 2 %>
          <%= link_to fa_icon('pencil'),
                edit_shift_note_path(n),
                class: 'font-weight-bold btn btn-sm btn-warning',
                title: 'Edit Shift Note',
                data: { toggle: 'tooltip' } %>
          <% end %>
          <% if @access_level >= 3 %>
          <%= link_to fa_icon('times'),
                shift_note_path(n),
                method: :delete,
                class: 'font-weight-bold btn btn-sm btn-danger',
                title: 'Delete Shift Note',
                data: { confirm: 'Are you sure you want to delete this shift note?',                            toggle: 'tooltip' } %>
          <%  end %>
        </div>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<div class="col d-xl-table-cell d-lg-table-cell d-md-table-cell d-none">
    <% if notes.blank? %>
    <% else %>
      <p class="font-weight-bold">
        <%= page_entries_info notes %>
        <%= paginate notes %>
      </p>
    <% end %>
</div>