<%= form_for @reason_code do |f| %>
  <div class="row">
    <div class="col-6">
      <div class="form-group">
        <%= f.label "Description:" %>
        <%= f.text_field :description, class: "form-control" %>
        <%= f.submit "submit", class: "btn" %>
      </div>
    </div>
  </div>
<% end %>