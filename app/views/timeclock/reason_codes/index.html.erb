<p id="notice"><%= notice %></p>

<h1>Timeclock Reason Codes</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Requires note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reason_codes.each do |reason_code| %>
      <tr>
        <td><%= reason_code.description %></td>
        <td><%= reason_code.requires_note %></td>
        <td><%= link_to 'Show', reason_code %></td>
        <td><%= link_to 'Edit', edit_timeclock_reason_code_path(reason_code) %></td>
        <td><%= link_to 'Destroy', reason_code, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

