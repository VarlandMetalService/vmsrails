<%= form_for @clock_record do |form| %>
  <div class="form-group">
    <%= form.label "Timestamp:"%>
    <%= form.datetime_field :timestamp, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label "Record Type:" %>
    <%= form.select :record_type, options_for_select(Timeclock::ClockRecord.options_for_record_type, @clock_record.record_type), {}, { class: "form-control" }  %>
  </div>
  <div class="form-group">
    <%= form.label "User:" %>
    <%= form.select :user_id, 
    options_for_select(User.all.map{ |u| [u.full_name, u.id]}, params[:user_id]), {}, { class: "form-control" } %>
  </div> 
  <div class="text-center" style="margin: 0 auto;">
    <%= form.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>