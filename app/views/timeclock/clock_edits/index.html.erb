<p id="notice"><%= notice %></p>

<h1>Clock Edits</h1>

<table>
  <thead>
    <tr>
      <th>Clock record</th>
      <th>User</th>
      <th>Ip address</th>
      <th>Reason</th>
      <th>Deleted at</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clock_edits.each do |clock_edit| %>
      <tr>
        
        <td><%= clock_edit.clock_record_id %></td>
        <td><%= clock_edit.user_id %></td>
        <td><%= clock_edit.ip_address %></td>
        <% y = Timeclock::ReasonCode.find(clock_edit.reason_id) unless clock_edit.reason_id.blank? %>
        <td><%= y.description unless y.blank? %></td>
        <td><%= clock_edit.deleted_at %></td>
        <td><%= clock_edit.note %></td>
        <td><%= link_to 'Show', clock_edit %></td>
        <td><%= link_to 'Edit', edit_timeclock_clock_edit_path(clock_edit) %></td>
        <td><%= link_to 'Destroy', clock_edit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

